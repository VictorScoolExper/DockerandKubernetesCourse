{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image" : "victorscool/multi-client",
            "hostname" : "client",
            "essential" : false
        },
        {
            "name": "server",
            "image" : "victorscool/multi-server",
            "hostname" : "api",
            "essential" : false
        },
        {
            "name": "worker",
            "image" : "victorscool/multi-worker",
            "hostname" : "worker",
            "essential" : false
        },
        {
            "name" : "nginx",
            "image" : "victorscool/multi-nginx",
            "hostname" : "nginx",
            "essential" : true,
            "portMappings" : [
                {
                    "hostPort": 80,
                    "containerPort" : 80
                }
            ],
            "links" : ["client", "server"]
        }
    ]
}
